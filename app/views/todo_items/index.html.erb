<p id="notice"><%= notice %></p>

<h1>Tasks List</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td style="width:10vw;"><%= todo_item.description %></td>
        <td style="width:10vw;"><%= link_to 'Show', todo_item %></td>
        <td style="width:10vw;"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td style="width:10vw;"><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_todo_item_path %>
